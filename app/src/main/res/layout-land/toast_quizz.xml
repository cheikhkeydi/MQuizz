<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/toast_layout"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#DC052D9C">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="308dp"
            android:layout_margin="14dp"
            android:background="@drawable/fondback"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_toast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:text="Le quizz commence dans"
                android:textAlignment="center"
                android:textColor="@color/colorprincipale"
                android:textSize="20dp" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/img_lottie"
                android:layout_width="250dp"
                android:layout_height="250dp"
                app:lottie_autoPlay="true"
                app:lottie_rawRes="@raw/ready" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>