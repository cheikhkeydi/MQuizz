<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".slider">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/compris"
                android:layout_width="251dp"
                android:layout_height="84dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="84dp"
                android:layout_marginLeft="84dp"
                android:layout_marginTop="312dp"
                android:layout_marginEnd="396dp"
                android:layout_marginRight="396dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/licence2"
                android:fontFamily="@font/poppinssemibold"
                android:text="J'ai compris"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:textStyle="bold" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/sliderviewPager"
                android:layout_width="wrap_content"
                android:layout_height="310dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="81dp"
                android:layout_marginLeft="81dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="69dp"
                android:layout_marginRight="69dp"
                android:layout_marginBottom="101dp">

            </androidx.viewpager.widget.ViewPager>

            <ImageButton
                android:id="@+id/fordward"
                android:layout_width="39dp"
                android:layout_height="67dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="666dp"
                android:layout_marginLeft="666dp"
                android:layout_marginTop="205dp"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="394dp"
                android:background="@drawable/forward"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="191dp"
                android:layout_marginEnd="691dp"
                android:layout_marginRight="691dp"
                android:layout_marginBottom="158dp"
                android:background="@drawable/back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:id="@+id/dotslayout"
                android:layout_width="wrap_content"
                android:layout_height="76dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="398dp"
                android:layout_marginLeft="398dp"
                android:layout_marginTop="315dp"
                android:layout_marginEnd="71dp"
                android:layout_marginRight="71dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal" />
        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>