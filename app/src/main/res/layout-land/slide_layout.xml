<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/slideImage"
            android:layout_width="390dp"
            android:layout_height="294dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/logopflat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.043"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/slideTitre"
            android:layout_width="329dp"
            android:layout_height="69dp"
            android:layout_below="@+id/slideImage"
            android:layout_marginStart="159dp"
            android:layout_marginLeft="159dp"
            android:layout_marginEnd="128dp"
            android:layout_marginRight="128dp"
            android:fontFamily="@font/poppinssemibold"
            android:text="Titre"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/colorprincipale"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/slideText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.548"
            app:layout_constraintStart_toEndOf="@+id/slideImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/slideText"
            android:layout_width="320dp"
            android:layout_height="177dp"
            android:layout_below="@+id/slideTitre"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/poppinsregular"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Titre daopapd dajljda slider dsdds"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorprincipale"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.992"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>