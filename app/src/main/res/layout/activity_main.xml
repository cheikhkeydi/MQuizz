<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/backgroundhome">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="660dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Les taches Ã  faire"
            android:textSize="24dp"
            android:textColor="@color/white"
            android:textAllCaps="true"
 />

        <Button
            android:id="@+id/scripte"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="Scripte Splash"
            android:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/acceuil"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Acceuil"
            android:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/jouer"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Info"
            android:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/info"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Jouer"/>

        <Button
            android:id="@+id/liste_score"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Liste scores" />

        <Button
            android:id="@+id/filiere"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Niveau"
            android:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/matiere"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Matiere"
            android:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/questionnaire"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Questionnaire"
            android:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/score"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Score"
            android:backgroundTint="#4CAF50" />



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>