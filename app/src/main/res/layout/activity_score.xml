<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".score">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageButton
            android:id="@+id/poursuivre"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="73dp"
            android:layout_marginLeft="73dp"
            android:layout_marginEnd="63dp"
            android:layout_marginRight="63dp"
            android:layout_marginBottom="121dp"
            android:background="@drawable/voir_stats"
            android:fontFamily="@font/poppinsmedium"
            android:text="Voir stats"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="24dp" />

        <ImageButton
            android:id="@+id/recommencer"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="75dp"
            android:layout_marginLeft="75dp"
            android:layout_marginEnd="66dp"
            android:layout_marginRight="66dp"
            android:layout_marginBottom="47dp"
            android:background="@drawable/recommencer"
            android:fontFamily="@font/poppinsmedium"
            android:text="Voir stats"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="24dp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationView"
            android:layout_width="413dp"
            android:layout_height="336dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/timesavedmobile" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimation"
            android:layout_width="413dp"
            android:layout_height="236dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="184dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/welldone" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:orientation="vertical"
            android:layout_width="320dp"
            android:layout_height="150dp"
            android:layout_alignBottom="@+id/lottieAnimationView"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginEnd="47dp"
            android:layout_marginRight="47dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/fondback"
            android:gravity="center">

            <TextView
                android:id="@+id/text_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsbold"
                android:text="18/20"
                android:textAlignment="center"
                android:textColor="@color/colorprincipale"
                android:textSize="64dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="196dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="103dp"
            android:layout_marginLeft="103dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="111dp"
            android:layout_marginRight="111dp"
            android:fontFamily="@font/poppinssemibold"
            android:text="@string/score"
            android:textAlignment="center"
            android:textColor="@color/colorprincipale"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/nomUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="109dp"
            android:layout_marginLeft="109dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="115dp"
            android:layout_marginRight="115dp"
            android:fontFamily="@font/poppinsbold"
            android:text="User Name"
            android:textAlignment="center"
            android:textColor="@color/orange"
            android:textSize="32dp" />

    <!--    <TextView
            android:id="@+id/text_userName"
